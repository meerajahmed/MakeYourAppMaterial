<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="150"
    android:exitFadeDuration="150" >

    <item android:state_pressed="true" android:drawable="@drawable/card_on_press"/>
    <item android:state_focused="true" android:state_enabled="true" android:drawable="@drawable/card_on_focus"/>
    <item android:state_enabled="true" android:drawable="@drawable/card_on_default"/>
    <item android:state_enabled="false" android:drawable="@drawable/card_on_press"/>
</selector>